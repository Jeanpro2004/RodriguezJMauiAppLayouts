<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="RodriguezJMauiApp.GridPage"
             Title="Grid Layout">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <BoxView Grid.Row="0" Grid.Column="0" Color="Red"/>
        <BoxView Grid.Row="0" Grid.Column="1" Color="Green"/>
        <BoxView Grid.Row="1" Grid.Column="0" Color="Blue"/>
        <StackLayout Grid.Row="1" Grid.Column="1" BackgroundColor="Yellow" VerticalOptions="Fill" HorizontalOptions="Fill">
            <Button Text="Ir a StackLayout" Clicked="OnGoToStackClicked"/>
        </StackLayout>
    </Grid>
</ContentPage>


